{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {},
    "rules": {
        "quotemark":[true, "single","avoid-escape"], //引号的使用规则
        "no-var-keyword":true, // 禁用 var
        "indent":[true, "spaces", 4], //使用4空格进行缩进
        "interface-name": true, // 强制接口 "I" 开头
        "no-console": true, //是否允许使用console
        "ordered-imports": false
    },
    "rulesDirectory": []
}